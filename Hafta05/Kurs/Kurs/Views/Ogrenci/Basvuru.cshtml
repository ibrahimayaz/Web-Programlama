@model Ogrenci

<div class="display-6">
    Başvuru Ekranı
</div>
<form method="post" action="/Ogrenci/Basvuru">
    <div class="form-group my-2">
        <label>Ad</label>
        <input name="Ad" type="text" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label>Soyad</label>
        <input name="Soyad" type="text" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label>Yaş</label>
        <input name="Yas" type="number" min="0" class="form-control" />
    </div>
    <label>Kurslar</label>
    <div class="form-check my-2">
        <input id="kurs1" name="SecilenKurs" class="form-check-input" type="radio" value="YDS-YÖKDİL" />
        <label class="form-check-label" for="kurs1">YDS-YÖKDİL</label>
    </div>
    <div class="form-check my-2">
        <input id="kurs2" name="SecilenKurs" class="form-check-input" type="radio" value="YDS-YÖKDİL" />
        <label class="form-check-label" for="kurs2">TBT</label>
    </div>
    <div class="form-check my-2">
        <input id="kurs3" name="SecilenKurs" class="form-check-input" type="radio" value="YDS-YÖKDİL" />
        <label class="form-check-label" for="kurs3">Veri Bilimi</label>
    </div>
    <div class="form-check my-2">
        <input id="kurs4" name="SecilenKurs" class="form-check-input" type="radio" value="YDS-YÖKDİL" />
        <label class="form-check-label" for="kurs4">Web Programlama</label>
    </div>
    <div class="btn-group">
        <button class="btn btn-primary" type="submit">BAŞVUR</button>
        <a class="btn btn-secondary"    asp-controller="Home" asp-action="Index">İPTAL</a>
    </div>
</form>